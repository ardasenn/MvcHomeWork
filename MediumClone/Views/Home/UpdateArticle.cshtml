
@model NewArticleVM
<div asp-validation-summary="All"></div>
<div class="blog-post">
    

    <form asp-action="UpdateArticle" method="post">
         <div class="form-group">
                <input asp-for="Title" class="form-control" value="@Model.Title" />
         </div>

         <div class="form-group">
            <textarea asp-for="Content" class="form-control" value="@Model.Content" rows="15"></textarea>
         </div>
         <table  class="table table-bordered table-sm">
         @foreach (var item in Model.AllCategories)
         {
                <tr>
                    <td>
                        @item.Name
                    </td>                   
                     <td>
                        @if (Model.CategoriesArticle.Contains(item))
                        {
                           <input checked="checked" type="checkbox" name="CategoryIds" value="@item.Id" />  
                        }
                        else{ 
                            <input type="checkbox" name="CategoryIds" value="@item.Id" /> 
                        }
                        
                    </td>                         
                </tr>
         }
         </table>
         <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" asp-route-id="@Model.ArticleId"/>
         </div>        
    </form>

</div>