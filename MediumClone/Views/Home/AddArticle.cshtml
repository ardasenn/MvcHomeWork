@model NewArticleVM
<div asp-validation-summary="All"></div>
<div class="blog-post">
    

    <form asp-action="AddArticle" method="post">
         <div class="form-group">
                <input asp-for="Title" class="form-control" value="@Model.Title" />
         </div>

         <div class="form-group">
            <textarea asp-for="Content" class="form-control" value="@Model.Content" rows="15"></textarea>
         </div>
         <table  class="table table-bordered table-sm">
         @foreach (var item in Model.Categories)
        {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
            <input type="checkbox" name="CategoryIds" value="@item.Id" /> 
                    </td>


                </tr>

        }
            </table>

         <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
         </div>        
    </form>

</div>